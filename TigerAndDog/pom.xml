    <modelVersion>4.0.0</modelVersion>

    <groupId>com.njupt.tigerdog</groupId>
    <artifactId>TigerAndDog</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <!--<packaging>war</packaging>-->
    <packaging>jar</packaging>

    <name>tiger-and-dog</name>
    <description>JAVA homework</description>

